<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-5 mt-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input placeholder="enter username" name="username" id="username" type="text" class="form-control" required autocomplete="off">
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input placeholder="enter password" name="password" id="password" type="password" class="form-control" required autocomplete="off">
                <div class="valid-feedback">Good Password</div>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>